@page
@model ProiectWeb.Pages.Clase.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Clase:</h1>

<p>
    <a asp-page="Create">Adauga o clasa noua!</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Clasa[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clasa[0].Descriere)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clasa[0].Instructor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Clasa) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descriere)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instructor)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
