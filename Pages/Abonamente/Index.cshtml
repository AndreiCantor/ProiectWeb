@page
@model ProiectWeb.Pages.Abonamente.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Diferitele tipuri de abonamente</h1>

<p>
    <a asp-page="Create">Creeaza un nou tip de abonament</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Abonament[0].Tip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abonament[0].Pret)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Abonament) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
